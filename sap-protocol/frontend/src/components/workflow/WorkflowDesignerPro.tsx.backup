      'database-query': 'database-query',
      'email-send': 'email-send',
      'notification': 'notification',
      'loop': 'loop',
      'delay': 'delay',
      'transform': 'transform',
      'error-handler': 'error-handler',
      'custom-function': 'custom-function',
      'llm': 'llm',
    };
    return categories[type] || 'utility';
