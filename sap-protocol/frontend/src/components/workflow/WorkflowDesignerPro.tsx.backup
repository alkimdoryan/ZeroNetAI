    }
  }, [nodes, edges, setNodes, reactFlowInstance]);

  // Apply initial layout
  useEffect(() => {
    if (nodes.length > 0) {
      applyLayout('dagre');
    }
  }, [initialNodes.length]); // Only trigger on initial load

  // Close stats dropdown when clicking outside
  useEffect(() => {
    const handleClickOutside = (event: MouseEvent) => {
